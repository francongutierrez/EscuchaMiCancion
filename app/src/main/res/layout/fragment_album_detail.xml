<!-- fragment_album_detail.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_album_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tv_album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_gravity="center" />


        <TextView
            android:id="@+id/tv_song1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btn_play_song1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reproducir"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tv_song2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btn_play_song2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reproducir"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tracklist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tracklist:"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_tracklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tracklist" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver Atrás"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btn_back_to_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver a Músicos del Mismo Género"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver al Inicio"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>
